<!DOCTYPE html>
<html>
  <head>
    <title>My-Skills</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
      <h1>Skills to date </h1>
        <% skills.forEach((s, idx) => { %>
          <div class='itemDisplay'> 
            <div class='itemContiner'> 
          <form action="/skills/<%= idx %>?_method=DELETE"  method="POST">
                <button type="submit">Delete</button>
              </form>
                <a class="skillStyle" href="/skills/<%= idx%>">
                  <%= s.skill %>
                </a>
                <%= s.learned ? 'Yes' : 'No' %>  
              </div> 
        <% }); %>
      
      </div> 
      <br>
      <a class="Link"  href="/skills/new">Add skill</a> 
  </body>
</html>
